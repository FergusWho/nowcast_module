SHELL=/bin/bash                                                                 
                                                                                
# Background sub-module                                                         
0 */8 * * * /shared/iPATH/nowcast_module_v1/background.sh >/data/iPATH/nowcast_module_v1/cron/Background/$(date -u +\%Y\%m\%d_\%H\%M).log 2>&1
                                                                                
# CME sub-module                                                                
*/15 * * * * /shared/iPATH/nowcast_module_v1/CME.sh >/data/iPATH/nowcast_module_v1/cron/CME/$(date -u +\%Y\%m\%d_\%H\%M).log 2>&1
                                                                                
# Flare sub-module                                                              
*/15 * * * * /shared/iPATH/nowcast_module_v1/flare.sh >/data/iPATH/nowcast_module_v1/cron/Flare/$(date -u +\%Y\%m\%d_\%H\%M).log 2>&1

# Daily monitoring report
55 23 * * * /shared/iPATH/nowcast_module_v1/support/DailyReport.sh &>>/data/iPATH/nowcast_module_v1/cron/DailyReport/$(date -u +\%Y\%m\%d).log

# Daily cleaning of staging area
0 0 * * * /shared/iPATH/nowcast_module_v1/support/DailyStagingToArchive.sh &>>/data/iPATH/nowcast_module_v1/cron/DailyStagingCleanup/$(date -u +\%Y\%m\%d).log

# Daily disk cleaning of simulation folders
0 0 * * * /shared/iPATH/nowcast_module_v1/support/DailyDiskCleanup.sh &>>/data/iPATH/nowcast_module_v1/cron/DailyDiskCleanup/$(date -u +\%Y\%m\%d).log

# network check
*/1 * * * * /shared/iPATH/nowcast_module_v1/support/CheckNetwork.sh &>>/data/iPATH/nowcast_module_v1/cron/NetworkCheck/$(date -u +\%Y\%m\%d).log
